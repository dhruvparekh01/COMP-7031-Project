<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Reminder Name -->
    <EditText
        android:id="@+id/reminderName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Reminder Name"
        android:autofillHints="Lunch Tomorrow"
        android:inputType="text" />

    <!-- Task Type Dropdown -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Task Type:"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/taskTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        />

    <!-- Date and Time Selection -->
    <Button
        android:id="@+id/selectDateTimeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Date and Time"
        android:layout_marginTop="20dp"/>

    <!-- Selected Date-Time Display -->
    <TextView
        android:id="@+id/selectedDateTimeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="No date and time selected"
        android:textSize="16sp" />

    <!-- Repeat Days Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Repeat On:"
        android:textSize="16sp" />

    <!-- First Row of Repeat Days -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <CheckBox
            android:id="@+id/repeatSunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sun" />
        <CheckBox
            android:id="@+id/repeatMonday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon" />
        <CheckBox
            android:id="@+id/repeatTuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tue" />
    </LinearLayout>

    <!-- Second Row of Repeat Days -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
>

        <CheckBox
            android:id="@+id/repeatWednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wed" />
        <CheckBox
            android:id="@+id/repeatThursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thu" />
        <CheckBox
            android:id="@+id/repeatFriday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fri" />
        <CheckBox
            android:id="@+id/repeatSaturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sat" />
    </LinearLayout>

    <!-- Notes Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Notes:"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/notesField"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Add additional details..."
        android:inputType="textMultiLine"
        android:minLines="1"
        android:maxLines="5" />

    <!-- File Selection -->
    <Button
        android:id="@+id/selectFileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Video File"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/selectedFilePath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="No file selected"
        android:textSize="16sp" />

    <!-- Buttons -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="end">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel" />

        <Button
            android:id="@+id/addTaskButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Add Task" />
    </LinearLayout>

</LinearLayout>
